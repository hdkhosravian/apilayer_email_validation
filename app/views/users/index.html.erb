<p id="notice"><%= notice %></p>

<% @errors&.each do |error| %>
  <div id="error_explanation">
    <li><%= error %></li>
  </div>
<% end %>

<%= render 'form', user: User.new %>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Url</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users&.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.url %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>